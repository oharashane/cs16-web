# CS1.6 Web - Environment Configuration Template
# Copy this to .env and customize for your deployment

# CS Game Server Configuration
CS_SERVER_HOST=mainbrain
CS_SERVER_PORT=27015

# Web Server Configuration  
WEB_SERVER_PORT=8080
PYTHON_RELAY_PORT=3000

# Security Settings
RCON_PASSWORD=REPLACE_WITH_YOUR_SECURE_PASSWORD

# Network Configuration
RELAY_ALLOWED_ORIGINS=*
RELAY_ALLOWED_BACKENDS=127.0.0.0/8,10.0.0.0/8,192.168.0.0/16,172.16.0.0/12

# WebRTC Configuration
WEBRTC_HOST_IP=auto
# Set to 'auto' for auto-detection, or specify your local IP (e.g., 192.168.1.100)
# Use this if auto-detection fails or for LAN deployments

# Advanced Settings (optional)
RELAY_IDLE_SEC=300
