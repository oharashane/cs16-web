FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY relay/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Add FastAPI and static file serving
RUN pip install fastapi uvicorn

# Copy unified relay server code
COPY relay/unified_server.py ./

# Copy client files into image (served at /)
COPY yohimik-client ./client/

# Expose port
EXPOSE 8090

# Run unified server
CMD ["python3", "unified_server.py"]